<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Archetype Created Web Application</display-name>
	<context-param>
		<param-name>movie</param-name>
		<param-value>sholay</param-value>
	</context-param>

	<servlet>
		<servlet-name>MyFirstServlet</servlet-name>
		<servlet-class>com.covalense.mywebapp.servlets.MyFirstServlet</servlet-class>

		<init-param>
			<param-name>actor</param-name>
			<param-value>amitabh</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>RedirectServlet</servlet-name>
		<display-name>RedirectServlet</display-name>
		<description></description>
		<servlet-class>com.covalense.mywebapp.servlets.RedirectServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ForwardServlet</servlet-name>
		<display-name>ForwardServlet</display-name>
		<description></description>
		<servlet-class>com.covalense.mywebapp.servlets.ForwardServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>CreateCookieServlet</servlet-name>
		<display-name>CreateCookieServlet</display-name>
		<description></description>
		<servlet-class>com.covalense.mywebapp.servlets.CreateCookieServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ReadCookieServlet</servlet-name>
		<display-name>ReadCookieServlet</display-name>
		<description></description>
		<servlet-class>com.covalense.mywebapp.servlets.ReadCookieServlet</servlet-class>
	</servlet>
	

	<servlet-mapping>
		<servlet-name>MyFirstServlet</servlet-name>
		<url-pattern>/currentDate</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>RedirectServlet</servlet-name>
		<url-pattern>/redirect</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ForwardServlet</servlet-name>
		<url-pattern>/forward</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CreateCookieServlet</servlet-name>
		<url-pattern>/CreateCookieServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ReadCookieServlet</servlet-name>
		<url-pattern>/readcookie</url-pattern>
	</servlet-mapping>
</web-app>
